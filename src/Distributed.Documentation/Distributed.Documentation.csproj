    <AssemblyName>Accolades.Maije.Distributed.Documentation</AssemblyName>
    <RootNamespace>Accolades.Maije.Distributed.Documentation</RootNamespace>
    <Authors>Authfix</Authors>
    <Company>Accolades SAS</Company>
    <Product>Maije Framework</Product>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/accoladeshq/maije</RepositoryUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>Copyright ©2019 Accolades SAS</Copyright>
    <NeutralLanguage>en</NeutralLanguage>
